
<div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center dropleft">
        <a href="{{ path('corbeille_show', {'id': corbeille.id}) }}">
        {% if corbeille.enable ==false   %}
            <span class="text-danger" ><i class="fas fa-eye-slash"></i></span>
        {%  endif %}

        {% if show_code_organisme|default(false) %}
            {{ corbeille.organisme.ref }} -
        {% endif %}

        {{ corbeille.name }}
        </a>
    {%  if corbeille.users.count !=0 %}
        <span  class="badge badge-info badge-pill dropdown-toggle " data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {%  if corbeille.users.count ==1 %}
                <i class="fas fa-user"></i>
            {% else %}
                <i class="fas fa-user-friends"></i>
            {% endif %}
        </span>
        <div class="dropdown-menu">

            {% for user in corbeille.users %}
                {{ include('user/_view/_item.html.twig') }}
            {% endfor %}
        </div>

    {% endif %}

</div>
