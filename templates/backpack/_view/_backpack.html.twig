<div class="card card-light  card-outline shadow">

    <div class=" card-header ">
        <div class="row ">
            <div class="col-sm-9   ">
                <i class="fas fa-suitcase text-info mr-3"></i>
                <a class="{{ backpack.enable?'':'text-danger' }}"
                   href="{{ path('backpack_show',{id:backpack.id}) }}">
                    {{ backpack.name }} {{ backpack.enable?'':' (masqu√©)' }}
                </a>

            </div>
            <div class="col-lg-2">
                {% if backpack.archiving %}
                    <span class="badge bg-yellow float-right">
                    <i class="fas fa-archive "></i>
                    Archive
                </span>
                {% endif %}
                {{ include('backpack/_show/_archiving.html.twig',{archiving:backpack.archiving}) }}
                {{ include('backpack/_show/_new.html.twig',{dateNew:backpack.updateAt}) }}
            </div>
            <div class="col-lg-1 text-muted text-xs">
                {{ backpack.updateAt  | date('d/m/Y H:i:s') }}
            </div>
        </div>
    </div>
    {%  set nbrL=backpack.backpackLinks | length  %}
    {%  set nbrF=backpack.backpackFiles | length  %}
    {% if nbrL>0 or nbrF>0 %}
    <div class="card-body row">
        {{ include('backpack/_view/_files_bloc.html.twig') }}
        {{ include('backpack/_view/_links_bloc.html.twig') }}
    </div>
    {% endif %}
    {% if backpack.content %}
        <div class="card-body p-2">
            <small class="text-muted pl-5 ">
                {{ backpack.content | raw }}
            </small>
        </div>
    {% endif %}


</div>
