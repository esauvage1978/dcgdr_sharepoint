{% for backpackLink in backpack.backpackLinks %}

    <tr>
        <td>
            <a target="_blank" href="{{ backpackLink.link }}">
                <i class="fas fa-globe mr-2"></i>
                {{ backpackLink.title }}
            </a>
            <br>
            <a target="_blank" href="{{ backpackLink.link }}">
                <span class="text-muted text-xs">
                    {{ backpackLink.link }}
                </span>
            </a>
        </td>
        <td >
            <span class="text-muted">
                {{ backpackLink.content | raw }}
            </span>
        </td>

        <td></td>
        <td class="col-1 text-muted text-xs ">
            {%  set color='black' %}
            {% if backpackLink.modifyAt %}
                {% set difference = date("today").diff(date(backpackLink.modifyAt)) %}
                {% set leftDays = difference.days %}
                {% if leftDays <8 %}
                    {%  set color='#f012be' %}
                {% endif %}
            {% endif %}
            <span style="color:{{ color }}">
                {{ backpackLink.modifyAt  | date('d/m/Y H:i:s') }}
            </span>
        </td>
    </tr>

{% endfor %}
