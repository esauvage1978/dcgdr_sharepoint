{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Administration {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/datatables-bs4/css/dataTables.bootstrap4.css')) }}">
{% endblock %}

{% block body_header %}
    <div class="col">
        <h1 class="m-0 text-dark">Administration </h1>
    </div>
    <div class="col">

    </div>
    <div class="col">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
            <li class="breadcrumb-item active"><a href="{{ path('admin_home') }}">Administration</a></li>
        </ol>
    </div>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-6">
            <h3  class="text-purple ">
                <small><i class="fas fa-cog"></i> Application</small>
            </h3>
            <div class="card">
                <div class="card-body p-0">
                    <table class="table">
                        <tbody>
                        {% if is_granted('ROLE_USER') %}
                            {{ include('admin/_entree_unitaire.html.twig',{'title':'Utilisateur', 'domaine':'user'} ) }}
                            {{ include('admin/_entree_unitaire.html.twig',{'title':'Organisme', 'domaine':'organisme'} ) }}
                            {{ include('admin/_entree_unitaire.html.twig',{'title':'Corbeille', 'domaine':'corbeille'} ) }}
                        {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
            <h3  class="text-purple mt-3">
                <small><i class="fas fa-cog"></i> Actions</small>
            </h3>
            <div class="card">

                <div class="card-body ">
                    <ul class="list-unstyled">

                        <li>
                            <h5>
                                <a class="btn btn-info" href="{{ path('command_notificator') }}">
                                    <i class="  fas fa-"></i>
                                    Lance les notifications pour les modifications à J-8
                                </a>
                            </h5>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
        {% if is_granted('ROLE_GESTIONNAIRE') %}
            <div class="col-6">
                <h3 id="anchor_organisme" class="text-purple">
                    <small><i class="fas fa-users"></i> Porte-document</small>
                </h3>
                <div class="card">
                    <div class="card-body p-0">
                        <table class="table">
                            <tbody>
                            {% if is_granted('ROLE_USER') %}
                                {{ include('admin/_entree_unitaire.html.twig',{'title':'Bibliothèque d\'images', 'domaine':'admin_picture'} ) }}
                                {{ include('admin/_entree_unitaire.html.twig',{'title':'Thématique pour les rubriques', 'domaine':'admin_thematic'} ) }}
                                {{ include('admin/_entree_unitaire.html.twig',{'title':'Rubrique', 'domaine':'admin_rubric'} ) }}
                                {{ include('admin/_entree_unitaire.html.twig',{'title':'Thématique pour les sous-rubriques', 'domaine':'admin_underthematic'} ) }}
                                {{ include('admin/_entree_unitaire.html.twig',{'title':'Sous-rubrique', 'domaine':'admin_underrubric'} ) }}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        {% endif %}

        {% if is_granted('ROLE_GESTIONNAIRE') %}
            <div class="col-6">


            </div>
        {% endif %}
    </div>


{% endblock %}


{% block javascripts %}
{% endblock %}